.container {
  display: flex;
  flex-direction: column;
}
.head-image {
  width: 100%;
  height: 460rpx;
}
.author-date {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  margin-left: 30rpx;
}
.avatar {
  width: 64rpx;
  height: 64rpx;
}
.author {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  color: #666;
}
.const-text {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}
.date {
  font-size: 24rpx;
  margin-left: 30rpx;
  color: #999;
}
.title {
  margin-left: 40rpx;
  font-size: 30rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}
.tool {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.circle {
  width: 660rpx;
  display: flex;
  justify-content: flex-end;
}
.circle-line {
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  position: relative;
  z-index: -1;
}
.circle-image {
  width: 90rpx;
  height: 90rpx;
}
.audio {
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  top: 175rpx;
  margin-left: -51rpx;
}

